<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow fixed-top">
        <div class="header">
            <a href="#" ><i class="fa fa-home fa-lg"></i>Home</a>
            <a href="#" style="position:relative;">Admin</a>
            <a href="#" style="position:relative;">Create Employee</a>
            <a href="#" style="position:relative;">Edit Employee</a>
        </div>
    </nav>

    <!-- Full Page Image Header with Vertically Centered Content -->
    <header class="masthead">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12 text-center">
                    @RenderBody()
                </div>
            </div>
        </div>
        
    </header>

    <footer>
        <div class="container body-content">
            <p>Copyright &copy; @DateTime.Now.Year - All right reserved by The Employee System</p>
        </div>
    </footer>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>