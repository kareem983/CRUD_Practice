<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <!-- Nav tabs -->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                @Html.ActionLink("Home", "Home", "Employee", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Create Employee", "Create", "Employee", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Edit Employee", "Edit", "Employee", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Admin", "Delete", "Employee", null, new { @class = "nav-link" })
            </li>
        </ul>
    </nav>


    <div class="masthead">
        @RenderBody()
    </div>
    <br />
    <br />
    
    <div class="container body-content">
        <p>Copyright &copy; @DateTime.Now.Year - All right reserved by The Employee System</p>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>